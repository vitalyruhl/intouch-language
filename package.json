{
	"name": "intouch-language",
	"displayName": "Intouch-Language and Formatter for VSCode. (c)2021 vitalyruhl",
	"description": "Intouch-Language syntax highlighting, formatter and code snippets for VSCode",
	"version": "0.3.0",
	"icon": "images/logo.png",
	"publisher": "vitalyruhl",
	"engines": {
		"vscode": "^1.6.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/vitalyruhl/intouch-language.git"
	},
	"bugs": {
		"url": "https://github.com/vitalyruhl/intouch-language/issues"
	  },
	"license": "GNU",
	"categories": [
		"Programming Languages",
		"Formatters",
		"Snippets"
	],
	"keywords": [
		"Intouch",
		"Invensys",
		"Wonderware",
		"Aveva",
		"formatter"
	],
	"main": "./out/extension",
	"activationEvents": [
        "onLanguage:intouch"
    ],
	"contributes": {
		"languages": [
			{
				"id": "intouch",
				"aliases": [
					"Intouch",
					"intouch"
				],
				"extensions": [
					".vbi",
					".vi"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "intouch",
				"scopeName": "source.vbi",
				"path": "./syntaxes/intouch.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "vbi",
				"path": "./snippets/vbi.json"
			}
		],
		
        "commands": [
			{
				"command": "vbi-format",
				"title": "Format Intouchfile",
				"category": "vbi"
			}
		],
		"keybindings": [
			{
				"command": "vbi-format",
				"key": "Ctrl+Shift+Alt+I"
			}
		],

		"configuration": {
			"type": "object",
			"title": "Intouch-Language",
			"properties": {
				"formatter.debug": {
					"type": "boolean",
					"default": false,
					"description": "Enable debugmodus."
				},
                "formatter.allowedNumberOfEmptyLines": {
					"type": "number",
					"default": 1,
					"description": "Number of allowed consecutive empty lines."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "rm -rf ./out; npm run compile",
		"postinstall": "node ./node_modules/vscode/bin/install && tsc",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
    "capabilities": {
      "virtualWorkspaces": true,
      "untrustedWorkspaces": {
        "supported": "limited",
        "description": "%ext.capabilities.untrustedWorkspaces.description%"
      }
    },
    "devDependencies": {
		"typescript": "",
		"vscode": "",
		"vscode-test": "",
		"eslint": "",
		"@types/node": "",
		"@types/vscode": ""
		
	},	
	"__metadata": {
		"id": "834eb420-2978-4100-b7de-2430fc88e429",
		"publisherDisplayName": "Vitaly Ruhl",
		"publisherId": "448eaf8e-6bd4-4b72-b6cd-9af578a789d2"
	}
}