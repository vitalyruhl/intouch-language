FOR i = 1 TO StringLen(sInputString) STEP 2

	SZ = StringMid(sInputString, i, 1);

	IF SZ == sDelimiter THEN {comment after then}
		Splitt = Splitt + 1;

		IF Splitt == iIndex THEN{comment close after then}
			{test much brackets in the next line}
			IF Sys_Debug_info > 0 THEN LogMessage(Funkt + "True Splitt(" + text(Splitt, "#") + ")/i:(" + text(i, "#") + "):[" + Temp_Return + "]"); ENDIF;
			EXIT FOR; {remember do not change nesting on exit for}
		ELSE
			IF Sys_Debug_info > 0 THEN LogMessage(Funkt + " Splitt(" + text(i, "#") + "):[" + Temp_Return + "]"); ENDIF;
